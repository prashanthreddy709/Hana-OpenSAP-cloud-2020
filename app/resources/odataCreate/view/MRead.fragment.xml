		<List id="list" width="100%">
			<InputListItem id="itmPath" label="{i18n>L1}">
				<Input id="mPath" value="{/mPath}"/>
			</InputListItem>
			<InputListItem id="itmEntity1" label="{i18n>L2}">
				<Input id="mEntity1" value="{/mEntity1}"/>
			</InputListItem>
		</List>
		<Button id="btnCall" press="callService" text="{i18n>B1}"/>
		<Button id="btnCreate" press="callCreate" text="{i18n>B2}"/>
	</Panel>
	<core:Fragment fragmentName="sap.openSAP.odataCreate.view.MTableHead" type="XML"/>
</core:FragmentDefinition>